@page
@model WebAppMysql.Pages.Pets.PlaygroundModel
@{
}

<h1>Welcome To The Playground !</h1>

<div>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <td>Date</td>
                <td>Temp Celcius</td>
                <td>Temp Fahrenheit</td>
                <td>Summary</td>
            </tr>
        </thead>
        <tbody>
            
                @foreach (var item in Model.WeatherForecastItems)
                    {
                        <tr>
                            <td>@item.Date</td>
                            <td>@item.TemperatureC</td>
                            <td>@item.TemperatureF</td>
                            <td>@item.Summary</td>
                        </tr>

                    }
        </tbody>
    </table>

    
</div>